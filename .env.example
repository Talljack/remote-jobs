# Clerk Authentication
# Get your keys from https://clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# Clerk URLs (optional)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Database
# For local development: Use Docker or local PostgreSQL
# For Vercel Postgres: Get from Vercel dashboard
# For other providers: Use your connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/remotejobs

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# V2EX token
V2EX_API_TOKEN=xxxxxx

# Cron Secret (REQUIRED for production, optional for local dev)
# Generate with: openssl rand -base64 32
CRON_SECRET=your_random_secret_here
