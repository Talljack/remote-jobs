    "next-intl": "^4.1.0",
    "next-themes": "^0.4.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-markdown": "^9.0.1",
    "recharts": "^2.15.3",
    "resend": "^4.5.1",
    "sonner": "^1.7.1",
